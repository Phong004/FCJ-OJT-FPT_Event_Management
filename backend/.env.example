# ================== DATABASE ==================
# MySQL Connection (Required)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=fpt_event_db
DB_USER=root
DB_PASSWORD=YOUR_MYSQL_ROOT_PASSWORD

# ================== JWT AUTHENTICATION ==================
# Generate strong JWT secret: openssl rand -base64 32
JWT_SECRET=YOUR_JWT_SECRET_MIN_32_CHARS_LONG
JWT_EXPIRY=24h

# ================== VNPAY PAYMENT GATEWAY ==================
# Register at: https://sandbox.vnpayment.vn/
# Docs: https://sandbox.vnpayment.vn/apis/docs/
VNPAY_TMN_CODE=YOUR_VNPAY_TERMINAL_CODE
VNPAY_HASH_SECRET=YOUR_VNPAY_HASH_SECRET
VNPAY_PAYMENT_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:8080/api/buyTicket

# Production VNPay (uncomment when ready):
# VNPAY_PAYMENT_URL=https://pay.vnpay.vn/vpcpay.html
# VNPAY_RETURN_URL=https://your-domain.com/api/buyTicket

# ================== GOOGLE RECAPTCHA ==================
# Register at: https://www.google.com/recaptcha/admin
# Create new site and copy keys below
RECAPTCHA_SITE_KEY=YOUR_RECAPTCHA_SITE_KEY
RECAPTCHA_SECRET_KEY=YOUR_RECAPTCHA_SECRET_KEY
RECAPTCHA_SKIP_VERIFY=false

# Development mode (NEVER in production):
# RECAPTCHA_SKIP_VERIFY=true

# ================== SMTP EMAIL CONFIGURATION ==================
# Gmail Setup Instructions:
# 1. Enable 2FA on your Google Account
# 2. Create App Password: Google Account > Security > App passwords
# 3. Use the 16-character password generated
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=YOUR_GMAIL_ADDRESS@gmail.com
SMTP_PASSWORD=YOUR_GMAIL_APP_PASSWORD
SMTP_FROM=YOUR_GMAIL_ADDRESS@gmail.com
SMTP_FROM_NAME=FPT Event Management
SMTP_USE_TLS=true
SMTP_SKIP_VERIFY=false

# Alternative: SendGrid
# SMTP_HOST=smtp.sendgrid.net
# SMTP_USERNAME=apikey
# SMTP_PASSWORD=your_sendgrid_api_key

# ================== SUPABASE STORAGE ==================
# For image uploads (banners, avatars)
# Register at: https://supabase.com/dashboard
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY

# ================== SERVER CONFIGURATION ==================
PORT=8080
HOST=0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-domain.com

# ================== LOGGING ==================
LOG_LEVEL=INFO
LOG_FORMAT=text
LOG_COLOR=true
SERVICE_NAME=fpt-event-api

# Production: Use JSON format
# LOG_FORMAT=json

# ================== AWS (For Lambda Deployment) ==================
# Only needed if deploying to AWS Lambda
# AWS_REGION=ap-southeast-1
# AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
# AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
